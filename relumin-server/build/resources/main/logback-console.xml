<?xml version="1.0" encoding="UTF-8"?>
<included>
  <property name="CONSOLE_LOG_PATTERN" value="${log.pattern.console:-%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
      <charset>utf8</charset>
    </encoder>
  </appender>

  <logger name="com.be_hase.relumin" level="${log.level:-DEBUG}" />
  <logger name="logging_operation" level="INFO" />

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</included>